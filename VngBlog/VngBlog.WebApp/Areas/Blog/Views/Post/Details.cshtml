            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class = "col-sm-10">
            @if (!string.IsNullOrEmpty(@Model.Author.FullName))
            {
                @Html.DisplayFor(model => model.Author.FullName)
            }
